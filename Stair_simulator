#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main(){
    int n;
    cin >> n;
    int m = 1;
    for (int i = 0; i < n; i++){
        for (int j = 0; j < n-m; j++){
            cout << " ";}
        for (int k = 0; k < m; k++){
            cout << "#";
        }
        cout << endl; m++;
    }
    return 0;
}
